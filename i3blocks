command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=25
markup=none

[window title]
command=xtitle -s
interval=persist

[ssid]
command=iwgetid -r
separator=false
interval=5

[wifi]
instance=wlp1s0
interval=5
separator=false

[iface]
interval=5
separator=false

[bandwidth]
min_width=IN 999K OUT 99K
align=center
interval=1

[cpu_usage -w 25 -c 90]
label=CPU
interval=1
min_width=CPU 100.00%
align=center
separator=false

[temperature]
command=sensors | awk '/Core/ {sum+=int($3); c++;} END {print int(sum/c)"Â°C"}'
label=TEMP
interval=5

[memory]
label=RAM
separator=false
interval=5

[memory]
label=SWAP
instance=swap
separator=false
interval=5

[disk]
label=DISK
interval=30

[volume]
label=VOL
command=$HOME/git/config/blocks/volume.sh
interval=1
separator=false

[brightness]
label=BRIGHT
command=$HOME/git/config/blocks/brightness.sh
interval=1

[battery]
label=BAT
interval=5

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
