command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=25
markup=none

[iface]
interval=5
separator=false

[ssid]
command=iwgetid -r
separator=false
interval=5

[wifi]
instance=wlp3s0
interval=10
separator=false

[bandwidth]
min_width=IN 999K OUT 99K
align=center
interval=1

#[openvpn]
#interval=20

[cpu_usage -w 25 -c 90]
label=CPU
interval=1
min_width=CPU: 100.00%
align=center
separator=false

[temperature]
command=/usr/lib/i3blocks/temperature --chip coretemp-isa-0000
label=TEMP
interval=5

[memory]
label=RAM
separator=false
interval=5

[memory]
label=SWAP
instance=swap
separator=false
interval=5

[disk]
label=DISK
interval=30

[battery]
label=BAT
interval=5

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
